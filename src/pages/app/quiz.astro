<script>
  import { MULK_VERSES } from '../../data/mulk-verses';
  import { getSession } from '../../lib/supabase';

  // Auth check (allow guest mode)
  (async () => {
    try {
      const { session } = await getSession();
      const isGuestMode = localStorage.getItem('mulk30_guest_mode') === 'true';
      
      if (!session && !isGuestMode) {
        window.location.href = '/';
        return;
      }
    } catch (e) {}
  })();
  
  interface WordData {
    word: number;
    german: string;
    arabic: string;
  }
  
  interface Question {
    ayah: number;
    hiddenIndex: number;
    options: string[];
    correct: string;
    words: string[]; // All words of the verse
  }
  
  let questions: Question[] = [];
  let currentIndex = 0;
  let score = 0;
  let wrongCount = 0;
  let streak = 0;
  let maxStreak = 0;
  let startTime = 0;
  let rangeStart = 1;
  let rangeEnd = 30;
  let answered = false;
  let currentQuizWrongVerses: number[] = []; // Track wrong answers in current quiz
  let useWeakVersesMode = false; // If true, only test weak verses
  
  // Weak verses tracking (persistent in localStorage)
  const WEAK_VERSES_KEY = 'mulk30_weak_verses';
  
  interface WeakVerseData {
    ayah: number;
    wrongCount: number;
    lastWrong: number; // timestamp
  }
  
  function getWeakVerses(): WeakVerseData[] {
    try {
      return JSON.parse(localStorage.getItem(WEAK_VERSES_KEY) || '[]');
    } catch {
      return [];
    }
  }
  
  function saveWeakVerses(verses: WeakVerseData[]) {
    localStorage.setItem(WEAK_VERSES_KEY, JSON.stringify(verses));
  }
  
  function addWeakVerse(ayah: number) {
    const verses = getWeakVerses();
    const existing = verses.find(v => v.ayah === ayah);
    if (existing) {
      existing.wrongCount++;
      existing.lastWrong = Date.now();
    } else {
      verses.push({ ayah, wrongCount: 1, lastWrong: Date.now() });
    }
    saveWeakVerses(verses);
  }
  
  function removeWeakVerse(ayah: number) {
    const verses = getWeakVerses().filter(v => v.ayah !== ayah);
    saveWeakVerses(verses);
  }
  
  function updateWeakVersesUI() {
    const weakVerses = getWeakVerses();
    const btn = document.getElementById('weak-verses-btn');
    const countEl = document.getElementById('weak-verses-count');
    
    if (weakVerses.length > 0 && btn && countEl) {
      btn.classList.remove('hidden');
      countEl.textContent = `${weakVerses.length} Verse mit Fehlern`;
    } else if (btn) {
      btn.classList.add('hidden');
    }
  }
  
  // Get words for a verse (simple split)
  function getVerseWords(ayahNum: number): string[] {
    const verse = MULK_VERSES.find(v => v.dayIndex === ayahNum);
    return verse ? verse.arabic.split(/\s+/).filter(w => w.length > 0) : [];
  }
  
  // Get all unique words from all verses (for wrong options)
  function getAllUniqueWords(): string[] {
    const allWords: string[] = [];
    for (let i = 1; i <= 30; i++) {
      const words = getVerseWords(i);
      allWords.push(...words);
    }
    return [...new Set(allWords)];
  }
  
  const viewSelect = document.getElementById('view-select')!;
  const viewQuiz = document.getElementById('view-quiz')!;
  const viewResults = document.getElementById('view-results')!;
  const ctaContainer = document.getElementById('cta-container')!;
  const rangeStartSelect = document.getElementById('range-start') as HTMLSelectElement;
  const rangeEndSelect = document.getElementById('range-end') as HTMLSelectElement;
  const rangeCountEl = document.getElementById('range-count')!;
  const startBtnText = document.getElementById('start-btn-text')!;
  
  function loadStats() {
    try {
      const stats = JSON.parse(localStorage.getItem('mulk30_quiz_stats') || '{"best":0,"total":0}');
      const bestEl = document.getElementById('best-score-display');
      const totalEl = document.getElementById('total-tests-display');
      if (bestEl) bestEl.textContent = stats.best > 0 ? `${stats.best}%` : '-';
      if (totalEl) totalEl.textContent = String(stats.total);
    } catch (e) {
      console.error('Failed to load quiz stats:', e);
    }
  }
  
  function saveStats(scoreVal: number, total: number) {
    const pct = Math.round((scoreVal / total) * 100);
    const stats = JSON.parse(localStorage.getItem('mulk30_quiz_stats') || '{"best":0,"total":0}');
    stats.total++;
    if (pct > stats.best) stats.best = pct;
    localStorage.setItem('mulk30_quiz_stats', JSON.stringify(stats));
  }
  
  function updateRangeCount() {
    const count = Math.abs(rangeEnd - rangeStart) + 1;
    rangeCountEl.textContent = count === 1 ? '1 Vers' : `${count} Verse`;
  }
  
  function updateStartButton() {
    const count = Math.abs(rangeEnd - rangeStart) + 1;
    startBtnText.textContent = `Teste ${count} Verse`;
  }
  
  function showView(view: 'select' | 'quiz' | 'results') {
    viewSelect.classList.toggle('hidden', view !== 'select');
    viewQuiz.classList.toggle('hidden', view !== 'quiz');
    viewResults.classList.toggle('hidden', view !== 'results');
    ctaContainer.classList.toggle('hidden', view !== 'select');
  }
  
  function generateQuestions(): Question[] {
    const generated: Question[] = [];
    const allUniqueWords = getAllUniqueWords();
    
    for (let ayahNum = rangeStart; ayahNum <= rangeEnd; ayahNum++) {
      const words = getVerseWords(ayahNum);
      if (words.length === 0) continue;
      
      // Pick a random word to hide (prefer words with 3+ characters)
      const goodIndices = words.map((w, i) => ({ w, i })).filter(x => x.w.length >= 3);
      const candidates = goodIndices.length > 0 ? goodIndices : words.map((w, i) => ({ w, i }));
      const chosen = candidates[Math.floor(Math.random() * candidates.length)];
      const hiddenIdx = chosen.i;
      const correct = words[hiddenIdx];
      
      // Generate wrong options from all words (excluding correct answer)
      const wrongOptions = allUniqueWords.filter(w => w !== correct && w.length >= 2);
      const shuffledWrong = wrongOptions.sort(() => Math.random() - 0.5);
      
      const options = [correct];
      for (let i = 0; i < shuffledWrong.length && options.length < 4; i++) {
        if (!options.includes(shuffledWrong[i])) {
          options.push(shuffledWrong[i]);
        }
      }
      
      // Fill with placeholders if needed
      while (options.length < 4) {
        options.push('—');
      }
      
      // Shuffle options
      options.sort(() => Math.random() - 0.5);
      
      generated.push({ ayah: ayahNum, hiddenIndex: hiddenIdx, options, correct, words });
    }
    
    // Shuffle questions order
    return generated.sort(() => Math.random() - 0.5);
  }
  
  function startQuiz() {
    // Reset tracking for this quiz session
    currentQuizWrongVerses = [];
    
    // Generate questions based on mode
    if (useWeakVersesMode) {
      questions = generateWeakVersesQuestions();
      useWeakVersesMode = false; // Reset mode after use
    } else {
      questions = generateQuestions();
    }
    
    if (questions.length === 0) {
      // No questions to show (e.g., no weak verses)
      alert('Nuk ka Verse për të testuar!');
      return;
    }
    
    currentIndex = 0;
    score = 0;
    wrongCount = 0;
    streak = 0;
    maxStreak = 0;
    answered = false;
    startTime = Date.now();
    document.getElementById('q-total')!.textContent = String(questions.length);
    document.getElementById('score-count')!.textContent = '0';
    document.getElementById('wrong-count')!.textContent = '0';
    document.getElementById('progress-bar')!.style.width = '0%';
    showView('quiz');
    renderQuestion();
  }
  
  // Generate questions only for weak verses
  function generateWeakVersesQuestions(): Question[] {
    const weakVerses = getWeakVerses();
    if (weakVerses.length === 0) return [];
    
    const generated: Question[] = [];
    const allUniqueWords = getAllUniqueWords();
    
    for (const weak of weakVerses) {
      const ayahNum = weak.ayah;
      const words = getVerseWords(ayahNum);
      if (words.length === 0) continue;
      
      const goodIndices = words.map((w, i) => ({ w, i })).filter(x => x.w.length >= 3);
      const candidates = goodIndices.length > 0 ? goodIndices : words.map((w, i) => ({ w, i }));
      const chosen = candidates[Math.floor(Math.random() * candidates.length)];
      const hiddenIdx = chosen.i;
      const correct = words[hiddenIdx];
      
      const wrongOptions = allUniqueWords.filter(w => w !== correct && w.length >= 2);
      const shuffledWrong = wrongOptions.sort(() => Math.random() - 0.5);
      
      const options = [correct];
      for (let i = 0; i < shuffledWrong.length && options.length < 4; i++) {
        if (!options.includes(shuffledWrong[i])) {
          options.push(shuffledWrong[i]);
        }
      }
      
      while (options.length < 4) {
        options.push('—');
      }
      
      options.sort(() => Math.random() - 0.5);
      generated.push({ ayah: ayahNum, hiddenIndex: hiddenIdx, options, correct, words });
    }
    
    return generated.sort(() => Math.random() - 0.5);
  }
  
  function renderQuestion() {
    const q = questions[currentIndex];
    answered = false;
    document.getElementById('q-current')!.textContent = String(currentIndex + 1);
    document.getElementById('q-ayah')!.textContent = String(q.ayah);
    
    // Build verse HTML with blank for hidden word
    // Words are joined without extra wrapper - RTL handled by dir="rtl" on container
    const questionHtml = q.words.map((w, i) => 
      i === q.hiddenIndex 
        ? '<span class="quiz-blank">ـــــ</span>'
        : w
    ).join(' ');
    document.getElementById('q-text')!.innerHTML = questionHtml;
    
    // 2x2 grid for options
    const optionsHtml = q.options.map((opt, i) => `
      <button class="option-btn p-4 rounded-xl border-2 border-[var(--color-border)] bg-white hover:border-[var(--color-primary)] hover:bg-[var(--color-primary)]/5 text-xl arabic text-center transition-all" data-idx="${i}" data-word="${opt}">${opt}</button>
    `).join('');
    document.getElementById('q-options')!.innerHTML = optionsHtml;
    document.querySelectorAll('.option-btn').forEach(btn => {
      btn.addEventListener('click', () => handleAnswer(btn as HTMLButtonElement));
    });
    document.getElementById('q-feedback')!.classList.add('hidden');
    document.getElementById('feedback-icon-correct')!.classList.add('hidden');
    document.getElementById('feedback-icon-wrong')!.classList.add('hidden');
  }
  
  function handleAnswer(btn: HTMLButtonElement) {
    if (answered) return;
    answered = true;
    const q = questions[currentIndex];
    const selected = btn.dataset.word || '';
    const isCorrect = selected === q.correct;
    
    // Disable all buttons and show correct answer
    document.querySelectorAll('.option-btn').forEach(b => {
      const button = b as HTMLButtonElement;
      button.disabled = true;
      const word = button.dataset.word || '';
      if (word === q.correct) {
        button.classList.add('correct');
      }
    });
    
    // Update the blank in the verse with the correct word
    const qText = document.getElementById('q-text')!;
    const filledHtml = q.words.map((w, i) => 
      i === q.hiddenIndex 
        ? `<span class="quiz-blank ${isCorrect ? 'quiz-blank-correct' : 'quiz-blank-wrong'}">${q.correct}</span>`
        : w
    ).join(' ');
    qText.innerHTML = filledHtml;
    
    if (isCorrect) {
      score++;
      streak++;
      if (streak > maxStreak) maxStreak = streak;
      btn.classList.add('correct');
      const scoreEl = document.getElementById('score-count')!;
      scoreEl.textContent = String(score);
      scoreEl.classList.add('pulse-grow');
      setTimeout(() => scoreEl.classList.remove('pulse-grow'), 300);
      showFeedback(true, 'Richtig!', q.correct);
      // Remove from weak verses if answered correctly
      removeWeakVerse(q.ayah);
    } else {
      wrongCount++;
      streak = 0;
      btn.classList.add('wrong');
      const wrongEl = document.getElementById('wrong-count')!;
      wrongEl.textContent = String(wrongCount);
      wrongEl.classList.add('pulse-grow');
      setTimeout(() => wrongEl.classList.remove('pulse-grow'), 300);
      btn.classList.add('shake');
      setTimeout(() => btn.classList.remove('shake'), 400);
      showFeedback(false, 'Falsch!', `Das richtige Wort: ${q.correct}`);
      // Add to weak verses tracking
      addWeakVerse(q.ayah);
      if (!currentQuizWrongVerses.includes(q.ayah)) {
        currentQuizWrongVerses.push(q.ayah);
      }
    }
    
    const progress = ((currentIndex + 1) / questions.length) * 100;
    document.getElementById('progress-bar')!.style.width = `${progress}%`;
    
    // Move to next question after delay
    setTimeout(() => {
      currentIndex++;
      if (currentIndex < questions.length) renderQuestion();
      else showResults();
    }, 1800);
  }
  
  function showFeedback(correct: boolean, text: string, answer?: string) {
    const feedbackEl = document.getElementById('q-feedback')!;
    feedbackEl.classList.remove('hidden', 'feedback-correct', 'feedback-wrong');
    feedbackEl.classList.add(correct ? 'feedback-correct' : 'feedback-wrong');
    
    // Show appropriate icon
    document.getElementById('feedback-icon-correct')!.classList.toggle('hidden', !correct);
    document.getElementById('feedback-icon-wrong')!.classList.toggle('hidden', correct);
    
    document.getElementById('feedback-text')!.textContent = text;
    const answerEl = document.getElementById('feedback-answer')!;
    if (answer) {
      answerEl.textContent = answer;
      answerEl.classList.remove('hidden');
    } else {
      answerEl.classList.add('hidden');
    }
  }
  
  function showResults() {
    const total = questions.length;
    const pct = Math.round((score / total) * 100);
    const elapsed = Math.floor((Date.now() - startTime) / 1000);
    const minutes = Math.floor(elapsed / 60);
    const seconds = elapsed % 60;
    document.getElementById('result-score')!.textContent = String(score);
    document.getElementById('result-total')!.textContent = String(total);
    document.getElementById('result-percent')!.textContent = `${pct}%`;
    document.getElementById('result-streak')!.textContent = String(maxStreak);
    document.getElementById('result-time')!.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
    const iconBgEl = document.getElementById('result-icon-bg')!;
    const msgEl = document.getElementById('result-message')!;
    document.getElementById('icon-trophy')!.classList.add('hidden');
    document.getElementById('icon-star')!.classList.add('hidden');
    document.getElementById('icon-check')!.classList.add('hidden');
    document.getElementById('icon-book')!.classList.add('hidden');
    if (pct === 100) {
      document.getElementById('icon-trophy')!.classList.remove('hidden');
      iconBgEl.className = 'w-24 h-24 mx-auto mb-4 rounded-2xl flex items-center justify-center bg-yellow-100';
      msgEl.textContent = 'Perfekt! E ke mësuar plotësisht!';
      createConfetti();
    } else if (pct >= 80) {
      document.getElementById('icon-star')!.classList.remove('hidden');
      iconBgEl.className = 'w-24 h-24 mx-auto mb-4 rounded-2xl flex items-center justify-center bg-[var(--color-primary)]/15';
      msgEl.textContent = 'Shkëlqyeshëm! Je shumë afër!';
      createConfetti();
    } else if (pct >= 60) {
      document.getElementById('icon-check')!.classList.remove('hidden');
      iconBgEl.className = 'w-24 h-24 mx-auto mb-4 rounded-2xl flex items-center justify-center bg-[var(--color-primary)]/15';
      msgEl.textContent = 'Mirë! Vazhdo të ushtroesh!';
    } else {
      document.getElementById('icon-book')!.classList.remove('hidden');
      iconBgEl.className = 'w-24 h-24 mx-auto mb-4 rounded-2xl flex items-center justify-center bg-gray-100';
      msgEl.textContent = 'Dëgjo surenë dhe provo përsëri!';
    }
    saveStats(score, total);
    loadStats();
    
    // Show weak verses from this quiz
    const weakVersesSection = document.getElementById('result-weak-verses')!;
    const weakListEl = document.getElementById('result-weak-list')!;
    const practiceWeakBtn = document.getElementById('practice-weak-btn')!;
    
    if (currentQuizWrongVerses.length > 0) {
      weakVersesSection.classList.remove('hidden');
      const sortedWrong = [...currentQuizWrongVerses].sort((a, b) => a - b);
      weakListEl.textContent = `Ajeti ${sortedWrong.join(', ')}`;
      practiceWeakBtn.classList.remove('hidden');
    } else {
      weakVersesSection.classList.add('hidden');
      practiceWeakBtn.classList.add('hidden');
    }
    
    // Update weak verses button in selection view
    updateWeakVersesUI();
    
    showView('results');
  }
  
  function createConfetti() {
    const container = document.getElementById('confetti-container')!;
    container.innerHTML = '';
    const colors = ['#FFD700', '#FF6B6B', '#4ECDC4', '#45B7D1', '#96CEB4', '#FFEAA7'];
    for (let i = 0; i < 40; i++) {
      const confetti = document.createElement('div');
      confetti.className = 'confetti';
      confetti.style.left = `${Math.random() * 100}%`;
      confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
      confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
      confetti.style.animation = `confetti-fall ${1.5 + Math.random()}s ease-out forwards`;
      confetti.style.animationDelay = `${Math.random() * 0.5}s`;
      container.appendChild(confetti);
    }
    setTimeout(() => container.innerHTML = '', 3000);
  }
  
  // Custom toggle
  document.getElementById('custom-toggle')?.addEventListener('click', () => {
    const content = document.getElementById('custom-content')!;
    const chevron = document.getElementById('custom-chevron')!;
    content.classList.toggle('hidden');
    chevron.classList.toggle('rotate-180');
    // Deselect presets when custom is opened
    if (!content.classList.contains('hidden')) {
      document.querySelectorAll('.quiz-preset').forEach(b => {
        b.classList.remove('selected');
        const radio = b.querySelector('.radio-indicator');
        if (radio) {
          radio.className = 'radio-indicator w-5 h-5 rounded-full border-2 border-[var(--color-border)]';
          radio.innerHTML = '';
        }
      });
    }
  });
  
  // Range selectors
  rangeStartSelect.addEventListener('change', () => {
    rangeStart = parseInt(rangeStartSelect.value);
    if (rangeEnd < rangeStart) {
      rangeEnd = rangeStart;
      rangeEndSelect.value = String(rangeEnd);
    }
    updateRangeCount();
    updateStartButton();
  });
  
  rangeEndSelect.addEventListener('change', () => {
    rangeEnd = parseInt(rangeEndSelect.value);
    if (rangeStart > rangeEnd) {
      rangeStart = rangeEnd;
      rangeStartSelect.value = String(rangeStart);
    }
    updateRangeCount();
    updateStartButton();
  });
  
  // Preset buttons
  document.querySelectorAll('.quiz-preset').forEach(btn => {
    btn.addEventListener('click', () => {
      const el = btn as HTMLElement;
      rangeStart = parseInt(el.dataset.start || '1');
      rangeEnd = parseInt(el.dataset.end || '30');
      rangeStartSelect.value = String(rangeStart);
      rangeEndSelect.value = String(rangeEnd);
      
      // Update visual selection
      document.querySelectorAll('.quiz-preset').forEach(b => {
        b.classList.remove('selected');
        const radio = b.querySelector('.radio-indicator');
        if (radio) {
          radio.className = 'radio-indicator w-5 h-5 rounded-full border-2 border-[var(--color-border)]';
          radio.innerHTML = '';
        }
      });
      
      el.classList.add('selected');
      const radio = el.querySelector('.radio-indicator');
      if (radio) {
        radio.className = 'radio-indicator w-5 h-5 rounded-full border-2 border-[var(--color-primary)] flex items-center justify-center';
        radio.innerHTML = '<div class="w-2.5 h-2.5 rounded-full bg-[var(--color-primary)]"></div>';
      }
      
      // Close custom panel if open
      document.getElementById('custom-content')!.classList.add('hidden');
      document.getElementById('custom-chevron')!.classList.remove('rotate-180');
      
      updateRangeCount();
      updateStartButton();
    });
  });
  
  // Start quiz
  document.getElementById('start-quiz-btn')?.addEventListener('click', startQuiz);
  
  // Quit quiz (back to selection)
  document.getElementById('quit-quiz')?.addEventListener('click', () => showView('select'));
  
  // Retry
  document.getElementById('retry-btn')?.addEventListener('click', startQuiz);
  
  // New quiz
  document.getElementById('new-quiz-btn')?.addEventListener('click', () => showView('select'));
  
  // Practice weak verses from selection
  document.getElementById('weak-verses-btn')?.addEventListener('click', () => {
    useWeakVersesMode = true;
    startQuiz();
  });
  
  // Practice weak verses from results
  document.getElementById('practice-weak-btn')?.addEventListener('click', () => {
    useWeakVersesMode = true;
    startQuiz();
  });
  
  // Init
  loadStats();
  updateStartButton();
  updateWeakVersesUI();
</script>
