---
import Layout from '../../layouts/Layout.astro';
import BottomNav from '../../components/BottomNav.astro';
---

<Layout title="Dhurata">
  <div class="min-h-screen flex flex-col bg-[var(--color-background)]">
    
    <!-- Header with gradient -->
    <header class="bg-gradient-to-b from-[#005086] via-[#318fb5] to-[#b0cac7] text-white px-4 pt-3 pb-16 safe-top">
      <div class="max-w-lg mx-auto flex items-center justify-between">
        <a href="/app" class="w-11 h-11 rounded-xl bg-white/10 flex items-center justify-center active:scale-95 transition-transform">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path></svg>
        </a>
        <div class="text-center">
          <h1 class="text-lg font-semibold tracking-tight">Dhurata</h1>
          <p class="text-xs text-white/70">Shpërblimi i sfidës</p>
        </div>
        <div class="w-11"></div>
      </div>
    </header>

    <main class="flex-1 px-4 pb-44 -mt-12">
      <div class="max-w-lg mx-auto space-y-4">

        <!-- Hero Card -->
        <div class="card text-center py-8 bg-gradient-to-b from-white to-[#f7d6bf]/30">
          <div class="w-20 h-20 mx-auto rounded-2xl bg-gradient-to-br from-yellow-400 to-orange-400 flex items-center justify-center shadow-lg mb-4">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 00-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-[var(--color-text)] mb-2">Fito një Kuran falas!</h2>
          <p class="text-sm text-[var(--color-text-secondary)] max-w-xs mx-auto">Përfundo 30 ditët e sfidës dhe merr dhuratë një ekzemplar të Kuranit Famëlartë.</p>
        </div>

        <!-- Progress Card -->
        <div class="card">
          <div class="flex items-center justify-between mb-4">
            <p class="font-semibold text-[var(--color-text)]">Progresi yt</p>
            <span id="progress-text" class="text-sm font-bold text-[var(--color-primary)]">0/30</span>
          </div>
          <div class="h-3 bg-[var(--color-border)] rounded-full overflow-hidden">
            <div id="progress-bar" class="h-full bg-gradient-to-r from-[var(--color-primary)] to-[#005086] rounded-full transition-all duration-500" style="width: 0%"></div>
          </div>
          <p id="progress-message" class="text-xs text-[var(--color-text-secondary)] text-center mt-3">Fillo sfidat për të fituar dhuratën!</p>
        </div>

        <!-- How it works -->
        <div class="card">
          <p class="font-semibold text-[var(--color-text)] mb-4">Si ta fitoj dhuratën?</p>
          
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-lg bg-[var(--color-primary)]/10 flex items-center justify-center flex-shrink-0">
                <span class="text-sm font-bold text-[var(--color-primary)]">1</span>
              </div>
              <div>
                <p class="font-medium text-[var(--color-text)]">Përfundo sfidën 30-ditore</p>
                <p class="text-xs text-[var(--color-text-secondary)]">Mëso të gjitha 30 ajetet e Sureja El-Mulk</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-lg bg-[#318fb5]/10 flex items-center justify-center flex-shrink-0">
                <span class="text-sm font-bold text-[#318fb5]">2</span>
              </div>
              <div>
                <p class="font-medium text-[var(--color-text)]">Na shkruaj në Instagram</p>
                <p class="text-xs text-[var(--color-text-secondary)]">Dërgo mesazh te @perkujtuesiditor me screenshot të progresit 100%</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-lg bg-[#b0cac7]/30 flex items-center justify-center flex-shrink-0">
                <span class="text-sm font-bold text-[#005086]">3</span>
              </div>
              <div>
                <p class="font-medium text-[var(--color-text)]">Merr Kuranin falas</p>
                <p class="text-xs text-[var(--color-text-secondary)]">Na jep adresën dhe ta dërgojmë në shtëpi</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Instagram Contact Card (always visible) -->
        <div class="card bg-gradient-to-r from-purple-500/10 to-pink-500/10 border-purple-200">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-r from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-[var(--color-text)]">Na ndiq në Instagram</p>
              <a href="https://instagram.com/perkujtuesiditor" target="_blank" rel="noopener noreferrer" class="text-sm text-purple-600 font-semibold">@perkujtuesiditor</a>
            </div>
            <a href="https://instagram.com/perkujtuesiditor" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-gradient-to-r from-purple-500 to-pink-500 flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
            </a>
          </div>
        </div>

        <!-- Claim Button (only shows when complete) -->
        <div id="claim-section" class="hidden">
          <button id="claim-btn" class="w-full bg-gradient-to-r from-yellow-500 to-orange-500 text-white font-semibold py-5 rounded-2xl active:scale-[0.98] transition-all shadow-lg">
            <div class="flex items-center justify-center gap-3">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 00-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/>
              </svg>
              <span>Kërko dhuratën tënde</span>
            </div>
          </button>
        </div>

        <!-- Not complete CTA -->
        <div id="continue-section">
          <a href="/app" class="block w-full bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-primary-dark)] text-white font-semibold py-5 rounded-2xl text-center active:scale-[0.98] transition-all shadow-lg shadow-[#318fb5]/35">
            <div class="flex items-center justify-center gap-3">
              <span>Vazhdo sfidat</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </div>
          </a>
        </div>

      </div>
    </main>

    <!-- Bottom Nav - "none" because gift is not in main nav -->
    <BottomNav active="none" />

    <!-- Claim Modal -->
    <div id="claim-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm p-4">
      <div class="bg-white rounded-2xl p-6 max-w-sm w-full shadow-xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 mx-auto rounded-2xl bg-gradient-to-br from-yellow-400 to-orange-400 flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 00-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[var(--color-text)]">Masha'Allah!</h3>
          <p class="text-sm text-[var(--color-text-secondary)] mt-2 mb-4">E përfundove sfidën me sukses! Për të marrë dhuratën, na shkruaj në Instagram:</p>
          <a href="https://instagram.com/perkujtuesiditor" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            @perkujtuesiditor
          </a>
        </div>
        <button id="modal-close" class="w-full py-3 rounded-xl bg-[var(--color-background)] border border-[var(--color-border)] text-[var(--color-text)] font-medium">Mbyll</button>
      </div>
    </div>
  </div>
</Layout>

<!-- Card styles now consolidated in global.css -->

<script>
  import { getState } from '../../lib/challenge';
  
  const state = getState();
  const completedCount = state.completedDays.length;
  const progress = (completedCount / 30) * 100;
  
  // Update progress display
  document.getElementById('progress-text')!.textContent = `${completedCount}/30`;
  document.getElementById('progress-bar')!.style.width = `${progress}%`;
  
  // Update message based on progress
  const messageEl = document.getElementById('progress-message')!;
  if (completedCount === 0) {
    messageEl.textContent = 'Fillo sfidat për të fituar dhuratën!';
  } else if (completedCount < 10) {
    messageEl.textContent = 'Fillim i mirë! Vazhdo kështu!';
  } else if (completedCount < 20) {
    messageEl.textContent = 'Po shkon shumë mirë! Edhe pak!';
  } else if (completedCount < 30) {
    messageEl.textContent = 'Pothuajse aty! Edhe pak ditë!';
  } else {
    messageEl.textContent = 'Masha\'Allah! E përfundove sfidën!';
  }
  
  // Show/hide claim section
  if (completedCount >= 30) {
    document.getElementById('claim-section')!.classList.remove('hidden');
    document.getElementById('continue-section')!.classList.add('hidden');
  }
  
  // Claim button handler - show modal
  const claimModal = document.getElementById('claim-modal')!;
  
  document.getElementById('claim-btn')?.addEventListener('click', () => {
    claimModal.classList.remove('hidden');
    claimModal.classList.add('flex');
  });
  
  document.getElementById('modal-close')?.addEventListener('click', () => {
    claimModal.classList.add('hidden');
    claimModal.classList.remove('flex');
  });
  
  // Close on backdrop click
  claimModal.addEventListener('click', (e) => {
    if (e.target === claimModal) {
      claimModal.classList.add('hidden');
      claimModal.classList.remove('flex');
    }
  });
  
  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !claimModal.classList.contains('hidden')) {
      claimModal.classList.add('hidden');
      claimModal.classList.remove('flex');
    }
  });
</script>
