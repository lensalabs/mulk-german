---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Registrieren">
  <div class="min-h-screen flex flex-col items-center justify-center px-4 py-12">
    <div class="w-full max-w-sm">
      <!-- Back Link -->
      <a href="/" class="inline-flex items-center gap-2 text-[var(--color-text-secondary)] hover:text-[var(--color-text)] mb-8" aria-label="Zurück">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Zurück
      </a>
      
      <!-- Logo -->
      <div class="text-center mb-8">
        <img src="/logo-stacked.svg" alt="Mulk 30" class="w-32 mx-auto mb-4" />
        <h1 class="heading-page">Konto erstellen</h1>
        <p class="text-[var(--color-text-secondary)]">Starte die 30-Tage Challenge</p>
      </div>
      
      <!-- Signup Form -->
      <form id="signup-form" class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium text-[var(--color-text)] mb-1">
            Name
          </label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required
            class="input"
            placeholder="Dein Name"
          />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-[var(--color-text)] mb-1">
            E-Mail
          </label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required
            class="input"
            placeholder="name@email.com"
          />
        </div>
        
        <div>
          <label for="password" class="block text-sm font-medium text-[var(--color-text)] mb-1">
            Passwort
          </label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required
            minlength="6"
            class="input"
            placeholder="Mindestens 6 Zeichen"
          />
        </div>
        
        <!-- Error message -->
        <div id="error-message" class="hidden text-sm text-[var(--color-error)] bg-[var(--color-error)]/10 dark:bg-[var(--color-error)]/20 p-3 rounded-lg">
        </div>
        
        <!-- Success message -->
        <div id="success-message" class="hidden text-sm text-[var(--color-success)] bg-[var(--color-success)]/10 dark:bg-[var(--color-success)]/20 p-3 rounded-lg">
        </div>
        
        <button type="submit" id="submit-btn" class="btn btn-primary w-full py-3">
          <span id="btn-text">Registrieren</span>
          <svg id="btn-spinner" class="hidden spinner w-5 h-5" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      </form>
      
      <!-- Login Link -->
      <p class="text-center mt-6 text-[var(--color-text-secondary)]">
        Schon ein Konto? 
        <a href="/auth/email" class="text-[var(--color-primary)] font-medium hover:underline">
          Anmelden
        </a>
      </p>
    </div>
  </div>
</Layout>

<script>
  import { signUp } from '../../lib/supabase';
  
  const form = document.getElementById('signup-form') as HTMLFormElement;
  const errorDiv = document.getElementById('error-message') as HTMLDivElement;
  const successDiv = document.getElementById('success-message') as HTMLDivElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const btnSpinner = document.getElementById('btn-spinner') as HTMLElement;
  
  function setLoading(loading: boolean) {
    submitBtn.disabled = loading;
    btnText.textContent = loading ? 'Wird registriert...' : 'Registrieren';
    btnSpinner.classList.toggle('hidden', !loading);
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;
    
    errorDiv.classList.add('hidden');
    successDiv.classList.add('hidden');
    setLoading(true);
    
    try {
      const { data, error } = await signUp(email, password, name);
      
      if (error) {
        errorDiv.textContent = error.message || 'Ein Fehler ist aufgetreten. Bitte versuche es erneut.';
        errorDiv.classList.remove('hidden');
        return;
      }
      
      // Show success message and redirect to login
      successDiv.textContent = 'Erfolgreich registriert! Bitte anmelden.';
      successDiv.classList.remove('hidden');
      
      setTimeout(() => {
        window.location.href = '/auth/email';
      }, 1500);
    } catch (e) {
      // Network error
      errorDiv.textContent = 'Keine Internetverbindung. Bitte versuche es erneut.';
      errorDiv.classList.remove('hidden');
    } finally {
      setLoading(false);
    }
  });
</script>
